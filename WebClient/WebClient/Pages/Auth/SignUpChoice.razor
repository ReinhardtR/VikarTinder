@page "/opret"
@inject NavigationManager NavigationManager

<MudStack Spacing="4" Justify="Justify.Center" AlignItems="AlignItems.Center">
    <MudText Typo="Typo.h5">Jeg vil oprette mig som</MudText>
    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="NavigateToRegisterSubstitute">Vikar</MudButton>
    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="NavigateToRegisterEmployer">Arbejdsudgiver</MudButton>
</MudStack>

@code {

    private void NavigateToRegisterSubstitute()
    {
        NavigationManager.NavigateTo("/opret/vikar");
    }
    
    private void NavigateToRegisterEmployer()
    {
        NavigationManager.NavigateTo("/opret/arbejdsudgiver");
    }
    
}